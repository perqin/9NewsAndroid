<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:id="@+id/topic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/cover_image"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/summary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topic_text"
        android:layout_toStartOf="@id/cover_image"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/summary_text"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/comment_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/summary_text"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/category_text"/>

    <TextView
        android:id="@+id/view_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/summary_text"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/comment_count_text"/>

</RelativeLayout>
