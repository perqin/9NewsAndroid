<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ninesmart.ninenews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".articleslist.activities.ArticlesListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authpage.activities.LoginRegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".article.activities.ArticleActivity"
            android:parentActivityName=".articleslist.activities.ArticlesListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cn.ninesmart.ninenews.articleslist.activities.ArticlesListActivity" />
        </activity>
        <activity
            android:name=".profile.activities.ProfileActivity"
            android:label="@string/profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/settings" />
    </application>

</manifest>